{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "inlineSourceMap": true,
    "sourceMap": false,
    "types": [],
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist"
  },
  "exclude": [
    "./node_modules/*",
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue"
  ]
}
